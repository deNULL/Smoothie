{
  "name": "Smoothie",
  "version": "1.0",
  "icons": {
    "48": "icon-48.png"
  },
  "manifest_version": 2,
  "description": "Adds audio visualisation effects to the tabs playing music.",
  "permissions": [
    "tabCapture",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon-19.png"
    },
    "default_title": "Start audio visualisation"
  },
  "background": {
    "scripts": [
      "common.js", "background.js"
    ]
  }
}